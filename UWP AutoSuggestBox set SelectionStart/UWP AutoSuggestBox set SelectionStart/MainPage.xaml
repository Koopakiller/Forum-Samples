<Page
    x:Class="UWP_AutoSuggestBox_set_SelectionStart.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="OnLoaded">
    <Page.Resources>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="25">
        <StackPanel>
            <AutoSuggestBox x:Name="Asb" />
            <TextBlock Name="Tb"/>
            <Button Content="Set SelectionStart = 2" Click="OnSetSelectionStart"/>
        </StackPanel>
    </Grid>
</Page>
